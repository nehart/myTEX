\NeedsTeXFormat{LaTeX2e}
\ProvidesClass{myREF-V001}[2023/04/17 loading package myREF-V001]

% ###########################################################################################################################################################################
% ###########################################################################################################################################################################
% ###########################################################################################################################################################################
% ###########################################################################################################################################################################
% ###########################################################################################################################################################################

%
% load required packages
%

\RequirePackage[hyphens]{url}
\RequirePackage{hyperref}
\RequirePackage{csquotes}

% ............................... %
\RequirePackage[ % .............. % 
	backend=biber, % ............ % use bibtex instead of biber to create the bbl file
	%style=numeric, % ............ % use the following style ([Doe50])
	style=alphabetic, %
	backref=false, % ............ % don't link back to the pages in the bibliography
	sorting=nty, % ............. % no sorting
	url=true, % ................. % specify URL in bibliography
	doi=true]{biblatex} % ....... % provide the corresponding link in the bibliography
% ............................... %

%
% This needs to be put in the myREF package
%

\BiblatexSplitbibDefernumbersWarningOff

%
% use the file ./references.bib (local folder where the tex file ist located)
% as bibliography database
%

\addbibresource[glob]{./bib/*.bib}

% 
% include the complete references.bib in the reference list (--> \nocite{*} <--)
%

% ...................................................... %
\let\oldprintbibliography\printbibliography % .......... % create \oldprintbibliography with settings from \printbibliography
% ...................................................... %
\renewcommand{\printbibliography}[1][] % ............... % renewcommand \printbibliography with one optional argument (--> [1][] <--)
{ % .................................................... %
	\nocite{*} % ....................................... % insert all entries from the bibliography database (references.bib)
	\oldprintbibliography[#1] % ........................ % print the references and pass the optional argument through
} % .................................................... %
% ...................................................... %

%
% Suppressing BibTeX fields for specific biblatex entry types 
%

\AtEveryBibitem{
	\ifentrytype{misc}{
		\clearfield{year}
		\clearname{author}
		\clearfield{title}
	}{}
}
 
